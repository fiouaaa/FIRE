<view class="searchbar">
  <view class="content">
    <image src="https://i.imgur.com/47ZTAKJ.png" class="search-icon"></image>
    <input type="text" placeholder-class="phClass" bindinput="getsearch" value="{{search_value}}" placeholder="搜索或输入网址"/>

    <input
      bindinput="handleInput"
      bindconfirm="handleConfirm"
      type="text"
      value="{{inputValue}}" 
      placeholder="{{placeholder}}" 
      class="input"
      confirm-type="search"
    ></input>
  
  </view>
  <view wx:if="{{inputValue}}" bindtap="handleTextbtnClick" class="text-btn">取消</view>
  <image src="https://i.imgur.com/Q7RTzas.png" class="INFORMATION-icon"></image>
  
</view>
